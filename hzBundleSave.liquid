  "name": "Bundle & Save",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Start with a bundle & save"
    },
    {
      "type": "textarea",
      "id": "hero_text",
      "label": "Hero Text",
      "default": "Personalize your experience whether you're looking to turn up, tap in, tune out, or just restock."
    },
    {
      "type": "url",
      "id": "hero_link",
      "label": "Hero Link"
    },
    {
      "type": "image_picker",
      "id": "hero_image_desktop",
      "label": "Hero Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Hero Mobile Image"
    }
  ],
  "blocks": [
    {
      "type": "bundle_card",
      "name": "Bundle Card",
      "settings": [
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Bundle Title"
        },
        {
          "type": "text",
          "id": "card_text",
          "label": "Card Text",
          "default": "Build Your Bundle"
        },
        {
          "type": "url",
          "id": "card_link",
          "label": "Card Link"
        },
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HZ Bundle & Save",
      "category": "products",
      "blocks": [
        {
          "type": "bundle_card"
        },
        {
          "type": "bundle_card"
        },
        {
          "type": "bundle_card"
        }
      ]
    }
  ]
}
{% endschema %}