<style>
  .hz__featured-products-columns-{{ section.id }} {
    margin-bottom: 30px;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__columns {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 36px;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__title-wrapper {
    padding: 25px 20px;
    border-radius: 12px;
    text-align: center;
    margin-bottom: -6px;
    position: relative;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__title {
    font-size: 3.4rem;
    margin: 0;
    color: {{ section.settings.title_color }};
  }
  .hz__featured-products-columns-{{ section.id }} .hz__overlay {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    z-index: -1;
    border-radius: 9999px;
    filter: blur(20px);
    display: block;
  }
  .hz__featured-products-columns-{{ section.id }} .bg-style1 .hz__overlay {
    background: linear-gradient(to right, rgba(190,255,255,0.3), rgba(255,200,255,0.4), rgba(200,220,255,0.3));
  }
  .hz__featured-products-columns-{{ section.id }} .bg-style2 .hz__overlay {
    background: linear-gradient(to right, rgba(255,220,200,0.4), rgba(255,230,180,0.4), rgba(255,210,200,0.4));
  }
  .hz__featured-products-columns-{{ section.id }} .bg-style3 .hz__overlay {
    background: linear-gradient(to right, rgba(180,220,255,0.4), rgba(200,180,255,0.4), rgba(160,160,255,0.4));
  }
  .hz__featured-products-columns-{{ section.id }} .hz__products-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 18px;
  }
  @media (max-width: 767px) {
    .hz__featured-products-columns-{{ section.id }} .hz__products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 6px;
    }
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-item {
    border-radius: 16px;
    transition: transform 0.3s ease;
    text-align: center;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-item:hover {
    transform: translateY(-5px);
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-link {
    display: block;
    border-radius: 56px;
    text-decoration: none;
    color: inherit;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-image-container {
    position: relative;
    width: 100%;
    padding-top: calc(100% / 0.76644737);
    border-radius: 56px;
    box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.1);
  }
  .hz__featured-products-columns-{{ section.id }} .hz__floating-icon {
    position: absolute;
    top: 25px;
    left: 25px;
    z-index: 1;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-image {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    object-fit: cover;
    border-radius: 56px;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-title {
    margin-top: 1rem;
    font-size: 3rem;
    font-weight: 300;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .hz__featured-products-columns-{{ section.id }} .hz__product-title svg {
    margin-inline-start: 8px;
  }
  
  .hz__featured-products-columns-{{ section.id }} .hz__related-products {
    position: absolute;
    bottom: -10px;
    display: flex;
    left: 20px;
    align-items: center;
    right: 20px;
    justify-content: space-between;
  }
  
  .hz__featured-products-columns-{{ section.id }} .hz__related-products > div {
    border: 1px solid #000;
    border-radius: 30px;
    background-color: #fff;
    font-family: 'PP Fragment, Sans Regular';
    padding: 2px 10px;
    font-size: 1.17rem;
    cursor: pointer;
  }

  @media (max-width: 1100px) {
    .hz__featured-products-columns-{{ section.id }} .hz__related-products {
      left: 0;
      right: 0;
    }
  
    .hz__featured-products-columns-{{ section.id }} .hz__related-products > div {
      padding: 2px 3px;
    }
  }

  @media (max-width: 767px) {
    .hz__featured-products-columns-{{ section.id }} .hz__product-title {
      font-size: 2.3rem;
    }
    .hz__featured-products-columns-{{ section.id }} .hz__title {
      text-align: start;
    }
    .hz__featured-products-columns-{{ section.id }} .hz__floating-icon {
      top: 14px;
      left: 14px;
      transform: scale(0.7);
    }
    .hz__featured-products-columns-{{ section.id }} .hz__columns {
      display: flex;
      flex-direction: column;
      gap: 0;
    }
    .hz__featured-products-columns-{{ section.id }} .hz__title {
      font-size: 3.8rem;
    }
    .hz__featured-products-columns-{{ section.id }} .hz__product-image-container {
      box-shadow: unset;
    }
    .hz__featured-products-columns-{{ section.id }} .hz__product-item {
      margin-bottom: 10px;
    }
    
    .hz__featured-products-columns-{{ section.id }} .hz__related-products > div {
      padding: 2px 8px;
      font-size: 1rem;
    }
  
    .hz__featured-products-columns-{{ section.id }} .hz__related-products {
      justify-content: space-around;
    }
  
    .hz__featured-products-columns-{{ section.id }} .hz__title-wrapper {
      padding-inline-start: 5px;
    }
  }
</style>

